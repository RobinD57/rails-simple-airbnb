<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Simple Airbnb</a>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ml-auto flex">
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" name="query" type="search" placeholder="Search" aria-label="Search" value="">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
      <a class="btn btn-outline-primary my-2 my-sm-0 ml-2" href="/flats/new">Add Flat</a>
    </div>
  </div>
</nav>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="card mb-4" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= @flat.name %></h5>
          <p class="card-text"><%=@flat.address %></p>
        </div>
      </div>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">A bite more about this flat</h5>
          <p class="card-text"><%=@flat.description %></p>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Book this place</h5>
          <p class="card-text">
            <form action="">
              <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">From:</span>
                <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
              </div>
              <div class="input-group mt-2">
                <span class="input-group-addon" id="basic-addon1">To:</span>
                <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
              </div>
              <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
            </form>
          </p>
        </div>
      </div>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Details</h5>
          <p class="card-text">
            <div class="flex">
              <i class="fas fa-user-friends"></i>
              <span><%= @flat.number_of_guests %></span>
            </div>
            <div class="flex ml-3">
              <i class="fas fa-euro-sign"></i>
              <span><%= @flat.price_per_night %></span>
            </div>
          </p>
        </div>
      </div>
      <div class="card" style="width: 18rem;">
        <div class="flex-align card-body">
          <h6 class="no-mb">Share</h6>
          <div class="flex">
            <i class="fab fa-facebook-square fa-2x mr-2"></i>
            <i class="fab fa-twitter-square fa-2x mr-2"></i>
            <i class="fab fa-pinterest-square fa-2x mr-2"></i>
            <i class="fa fa-envelope-square fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
