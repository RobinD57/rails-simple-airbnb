<p id="notice"><%= notice %></p>

<div class="container mt-3">
  <div class="row col-12">
    <h1>All our Flats</h1>
  </div>
  <div class="row col-12">
    <p>You have <%= Flat.all.count %> results:</p>
  </div>
  <div class="row col-12">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="card" id="flat-card" style="width: 18rem;">
          <img class="card-img-top" src="https://loremflickr.com/350/180" alt="Card image">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text">
              <%= flat.address %>
              <div class="row">
                <div class="flex ml-3">
                  <i class="fas fa-user-friends"></i>
                  <span><%= flat.number_of_guests %></span>
                </div>
                <div class="flex ml-3">
                  <i class="fas fa-euro-sign"></i>
                  <span><%= flat.price_per_night %></span>
                </div>
              </div>
             </p>
          </div>
          <div class="card-footer">
            <div class="row ml-1">
              <p><%= link_to 'More info', flat %></p>
              <p class="ml-3"><%= link_to 'Edit', edit_flat_path(flat), { class: "text-warning" } %></p>
              <p class="ml-3"><%= link_to 'Remove', flat, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Flat', new_flat_path %>
